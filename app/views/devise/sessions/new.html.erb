<div class="custom-container d-flex">
<div class="left-page" style="width: 50%">
<div class="max-width-container">
<h1>Log in</h1>
<p style="opacity: 0.4">Enter your credentials to access your Account</p>
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
  <div class="e-mail-container mb-5 mt-5">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "Email Adress" } %>
                </div>
                <div class="password-container mb-5 mt-5">
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "currenet-password" } %>
                <div style="opacity: 0.4">
                <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
                </div>

    </div>
  </div>

  <div class="form-actions btn btn-primary btn-lg custom-login-btn" style="border-radius: 10px;">
    <%= f.button :submit, "Log in"%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>

<div class="right-page">
</div>


</div>
