<div class="show-container">
  <div class="show-mentor" style="margin-bottom: 200px">
    <div class="show-mentor-info">
      <div class="show-mentor-info-profile">
        <div class="avatar-2 d-flex">
          <img src="<%= @mentor.user.avatar %>" alt="">
        </div>
          <div class="show-mentor-info-profile-descriptions" data-controller="flatpickr">

              <p style="margin-top: 20px"> Choose a Date</p>
            <%= simple_form_for [@mentor, @booking] do |f|%>
              <%= f.input :date, as: :string, required: false, input_html: {class: "datepicker"}, label:false %>
              <%= f.submit "Book now!", class: "btn btn-primary" %>
            <% end %>
          </div>
      </div>
      <div class="show-mentor-info-description ml-7">
        <div class="d-flex align-items-center justify-content-between">
          <div class="d-flex align-items-center justify-content-center">
            <h1><%= @mentor.user.name %></h1>
            <span>
            <a href="https://www.linkedin.com/in/benedikt-conze-4a635a210/" style="margin-left: 10px;font-size: 20px"><i class="fab fa-linkedin"></i></a>
            </span>
          </div>
          <p class="text-right"><%= @mentor.price %>$</p>
        </div>
          <p><%= @mentor.title %></p>

          <span class="mentor-expertise"><%= @mentor.expertise %></span>
          <p style="margin-top: 20px"><%= @mentor.description %></p>
          <div class="show-mentor-info-description-buttons">
        </div>
      </div>
    </div>
  </div>
</div>

<div style="margin-left:30px">
</div>
</div>
  <div class="custom-box-parent">
</div>

<%= render 'shared/footer' %>
